pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "zainali128/myapp"
    }
    parameters {
        choice(name: 'ENV', choices: ['dev','qa','prod'], description: 'Select environment')
    }
    stages {
        stage('Checkout') {
            steps { git 'https://github.com/yourusername/myapp.git' }
        }
        stage('Install Dependencies') {
            steps { sh 'npm install' }
        }
        stage('Run Unit Tests') {
            steps { sh 'npm test' }
        }
        stage('Run Integration Tests') {
            steps { sh 'node tests/integration.test.js' }
        }
        stage('Lint / Code Analysis') {
            steps { sh 'echo "Linting placeholder"' }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    def version = "v1.${env.BUILD_NUMBER}"
                    sh "docker build -t ${DOCKER_IMAGE}:${version} ."
                    sh "docker push ${DOCKER_IMAGE}:${version}"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    if(params.ENV=='dev') {
                        sh "docker run -d --env-file config/dev.env --name myapp_dev ${DOCKER_IMAGE}:v1.${env.BUILD_NUMBER}"
                    } else if(params.ENV=='qa') {
                        input "Approve QA Deployment?"
                        sh "docker run -d --env-file config/qa.env --name myapp_qa ${DOCKER_IMAGE}:v1.${env.BUILD_NUMBER}"
                        sh "node tests/integration.test.js"
                    } else if(params.ENV=='prod') {
                        input "Approve Production Deployment?"
                        sh "docker run -d --env-file config/prod.env --name myapp_prod ${DOCKER_IMAGE}:v1.${env.BUILD_NUMBER}"
                    }
                }
            }
        }
    }
    post {
        failure {
            echo "Deployment failed! Rolling back..."
            sh "docker stop myapp_${params.ENV} || true"
            sh "docker rm myapp_${params.ENV} || true"
        }
    }
}
